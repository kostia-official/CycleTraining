<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kozzztya.cycletraining"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="20"/>

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:allowBackup="true"
        android:theme="@style/Theme.MyAppCompat"
        >

        <activity
            android:name=".trainingjournal.TrainingJournalActivity"
            android:label="@string/app_name">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".trainingjournal.TrainingDayActivity"
                  android:parentActivityName=".trainingjournal.TrainingJournalActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".trainingjournal.TrainingJournalActivity"/>
        </activity>

        <activity android:name=".trainingjournal.TrainingSortActivity"
                  android:label="@string/sort"/>

        <activity android:name=".trainingcreate.TrainingCreateActivity"
                  android:label="@string/training_create">
        </activity>

        <activity android:name=".trainingcreate.TrainingPlanActivity"/>

        <activity android:name=".trainingcreate.ProgramsActivity"
                  android:label="@string/programs"
                  android:parentActivityName=".trainingcreate.TrainingCreateActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".trainingcreate.TrainingCreateActivity"/>
        </activity>

        <activity android:name=".trainingcreate.ExercisesActivity"
                  android:label="@string/exercises"
                  android:parentActivityName=".trainingcreate.TrainingCreateActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".trainingcreate.TrainingCreateActivity"/>
        </activity>

        <activity android:name=".trainingcreate.ExerciseCreateFragment"
                  android:label="@string/action_exercise_create"
                  android:parentActivityName=".trainingcreate.ExercisesActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".trainingcreate.ExercisesActivity"/>
        </activity>

        <activity android:name=".trainingprocess.TrainingProcessActivity"
                  android:uiOptions="splitActionBarWhenNarrow"
            >
            <meta-data android:name="android.support.UI_OPTIONS"
                       android:value="splitActionBarWhenNarrow"/>
        </activity>

        <activity android:name=".statistic.StatisticShowActivity"/>

        <activity android:name=".statistic.StatisticCreateActivity"
                  android:label="@string/statistic"
                  android:parentActivityName="com.kozzztya.cycletraining.statistic.StatisticShowActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".statistic.StatisticShowActivity"/>
        </activity>

        <activity android:name=".MyPreferenceActivity"
                  android:label="@string/action_settings"
            />

    </application>
</manifest>
