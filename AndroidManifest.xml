<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kozzztya.cycletraining"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyAppCompat"
        >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".trainingjournal.TrainingDayActivity"
                  android:parentActivityName=".MainActivity"
            >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".MainActivity"/>
        </activity>

        <activity android:name=".trainingjournal.TrainingCalendarActivity"
                  android:label="@string/action_calendar"
                  android:parentActivityName=".MainActivity"
            >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".MainActivity"/>
        </activity>

        <activity android:name=".trainingjournal.TrainingSortActivity"
                  android:label="@string/sort"/>

        <activity android:name=".trainingcreate.TrainingPlanActivity"/>

        <activity android:name=".trainingcreate.ProgramsActivity"
                  android:label="@string/programs"
                  android:parentActivityName=".MainActivity"
            >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".MainActivity"/>
        </activity>

        <activity android:name=".trainingcreate.ExercisesActivity"
                  android:label="@string/exercises"
                  android:parentActivityName=".MainActivity"
            >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".MainActivity"/>
        </activity>

        <activity android:name=".trainingprocess.TrainingProcessActivity"/>

        <activity android:name=".statistic.StatisticShowActivity"
                  android:parentActivityName="com.kozzztya.cycletraining.MainActivity"
            >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".MainActivity"/>
        </activity>

        <activity
            android:name=".SettingsActivity"
                  android:label="@string/action_settings"
            />

        <provider
            android:name=".db.DatabaseProvider"
            android:authorities="com.kozzztya.cycletraining.DatabaseProvider">
        </provider>

    </application>
</manifest>
