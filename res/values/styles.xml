<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.MyAppCompat" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#263238</item>
        <item name="colorAccent">#607D8B</item>

        <item name="android:windowAnimationStyle">@null</item>

        <item name="android:textAppearanceMedium">@style/TextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmall</item>

        <item name="android:listViewStyle">@style/ListViewMyAppCompat</item>

        <item name="android:dialogPreferenceStyle">@style/DialogTheme</item>
        <item name="android:alertDialogStyle">@style/DialogTheme</item>
    </style>

    <!-- Fix dialog background for 7-11 API -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:fullDark">@drawable/dialog_body</item>
        <item name="android:topDark">@drawable/dialog_title</item>
        <item name="android:centerDark">@drawable/dialog_body</item>
        <item name="android:bottomDark">@drawable/dialog_footer</item>
        <item name="android:fullBright">@drawable/dialog_body</item>
        <item name="android:centerBright">@drawable/dialog_body</item>
        <item name="android:bottomBright">@drawable/dialog_footer</item>
        <item name="android:bottomMedium">@drawable/dialog_footer</item>
        <item name="android:centerMedium">@drawable/dialog_body</item>
    </style>

    <style name="TextAppearanceMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_app_medium_color</item>
    </style>

    <style name="TextAppearanceSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_app_small_color</item>
    </style>

    <style name="SectionHeader" parent="android:Widget.TextView">
        <item name="android:paddingLeft">12.5dp</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="HeaderDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="ListDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">@color/listviewDividerColor</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/abc_list_divider_mtrl_alpha</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ListViewMyAppCompat" parent="android:Widget.ListView">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">?attr/selectableItemBackground</item>
    </style>

    <style name="ListText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListTextSecondary" parent="ListText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Chooser">
        <item name="android:textAppearance">@android:style/TextAppearance.Widget.TextView.SpinnerItem</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableRight">@drawable/ic_chooser</item>
    </style>

</resources>